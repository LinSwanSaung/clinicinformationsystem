{
  "name": "realcis-server",
  "version": "1.0.0",
  "description": "RealCIS Clinic Information System - Backend API",
  "main": "src/app.js",
  "type": "module",
  "imports": {
    "#src/*": "./src/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#repos/*": "./src/services/repositories/*",
    "#middleware/*": "./src/middleware/*",
    "#config/*": "./src/config/*",
    "#utils/*": "./src/utils/*",
    "#constants/*": "./src/constants/*",
    "#validators/*": "./src/validators/*",
    "#models/*": "./src/models/*",
    "#errors/*": "./src/errors/*"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "db:migrate": "node database/migrate.js",
    "db:test": "node database/migrate.js test",
    "db:seed": "node database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "db:verify-schema": "node scripts/verify-schema-comprehensive.js"
  },
  "keywords": [
    "clinic",
    "medical",
    "healthcare",
    "api",
    "supabase",
    "nodejs"
  ],
  "author": "RealCIS Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.23.8",
    "@supabase/supabase-js": "^2.39.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-alpha.7",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "openai": "^6.7.0",
    "pdfkit": "^0.17.2",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
